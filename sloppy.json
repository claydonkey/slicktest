{
    "project": "sloppy-slick",
    "services": [
	{
	    "id": "sloppy-slick",
	    "apps": [
		{
		    "env": {},
		    "domain": {
			"uri": "sloppy-slick.sloppy.zone"
		    },
		    "mem": 512,
		    "image": "claydonkey/sloppy-slick:1.0-SNAPSHOT",
		    "instances": 1,
		    "id": "slicktest",
		    "health_checks": [],
		    "volumes": [],
			 "env": {
			"SLICK_DB": "jdbc:mysql://mysql.backend.slicktest",
			"SLICK_DB_USER": "",
			"SLICK_DB_PASSWORD": "example"
		    },
		    "port_mappings": [
			{
			    "container_port": 9000,
				"protocol": "tcp"
			}
		    ],
		    "dependencies": [
			"../../backend/mysql"
		    ]
		}
	    ]
	},
	{
	    "id": "backend",
	    "apps": [
		{
		    "id": "mysql",
			 "env": {
			"MYSQL_ROOT_PASSWORD": "example",
			"MYSQL_USER": "root",
			"MYSQL_PASSWORD": "example",
			"MYSQL_DATABASE": "slicktest"
		    },
		    "instances": 1,
		    "mem": 512,		    
		    "image": "claydonkey/mysql",		   
		    "domain": {
			"uri": "claydonkeysql.sloppy.zone"
		    }		   
		}
	    ]
	}
    ]
}

