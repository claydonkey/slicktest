{
    "project": "sloppy-slick",
    "services": [
	{
	    "id": "slick",
	    "apps": [
		{
		    "env": {},
		    "domain": {
			"uri": "slick-project.sloppy.zone"
		    },
		    "mem": 512,
		    "image": "claydonkey/sloppy-slick:latest",
		    "instances": 1,
		    "id": "slickapp",
		    "health_checks": [],
		    "volumes": [],
			 "env": {
		    "SLICK_DB_IP_ADDRESS": "mysql.backend.slicktest",
			"SLICK_DB_PORT": "3306",
			"SLICK_DB_NAME": "slicktest",
			"SLICK_DB_USER": "test",
			"SLICK_DB_PASSWORD": "example"
		    },
			"health_checks": [
            {
              "timeout_seconds": 10,
              "interval_seconds": 10,
              "max_consecutive_failures": 3,
              "path": "/",
              "type": "HTTP",
              "grace_period_seconds": 3
            }
          ],
		    "port_mappings": [
			{
			    "container_port": 9000
			}
		    ],
		    "dependencies": [
			"../../backend/mysql"
		    ]
		}
	    ]
	},
	{
	    "id": "backend",
	    "apps": [
		{
		    "id": "mysql",
		    "instances": 1,
		    "mem": 512,
		    "port_mappings": [
			{
			    "container_port": 3306,
			    "protocol": "tcp"
			}
		    ],
		    "image": "claydonkey/mysql",
		    "_comment volumes": [
			{
			    "container_path": "/var/lib/mysql",
			    "size": "8GB"
			}
		    ],
		    "domain": {
			"uri": "claydonkeysql.sloppy.zone"
		    },
		    "env": {
			"MYSQL_ROOT_PASSWORD": "example",
			"MYSQL_USER": "test",
			"MYSQL_PASSWORD": "example",
			"MYSQL_DATABASE": "slicktest"
		    }
		}
	    ]
	}
    ]
}

